# Headers for caching static assets
# Note: GitHub Pages doesn't support custom headers by default
# This file is for reference if you migrate to Netlify, Vercel, or Cloudflare Pages

# Cache static assets for 1 year (immutable)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache fonts for 1 year
/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# Cache images for 1 month
/images/*
  Cache-Control: public, max-age=2592000

# Don't cache HTML (always get fresh content)
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# Cache favicon for 1 week
/favicon.svg
  Cache-Control: public, max-age=604800
